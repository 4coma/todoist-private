  bool _showDescriptions = false;
  final PreferencesService _preferencesService = PreferencesService();
  final DataExportImportService _dataExportImportService = DataExportImportService();

  @override
  void initState() {
    super.initState();
    _loadSettings();
  }

  Future<void> _loadSettings() async {
    setState(() {
      _showDescriptions = _preferencesService.showDescriptions;
    });
  }

  Future<void> _saveShowDescriptions(bool value) async {
    await _preferencesService.setShowDescriptions(value);
    setState(() {
      _showDescriptions = value;
    });
    widget.onSettingsChanged();
  }

  Future<void> _exportData() async {
    try {
      final data = _dataExportImportService.exportAllData();
      final jsonString = const JsonEncoder.withIndent('  ').convert(data);
      final directory = await getApplicationDocumentsDirectory();
      final file = File('${directory.path}/todo_backup_${DateTime.now().millisecondsSinceEpoch}.json');
      await file.writeAsString(jsonString);
      await Share.shareXFiles([XFile(file.path)], text: 'Sauvegarde Todo App');
      if (mounted) {
        ScaffoldMessenger.of(context).showSnackBar(
          const SnackBar(content: Text('Export r√©ussi ! Fichier pr√™t √† √™tre partag√©.')),

      final projects = _projectService.projects;
      setState(() {
        _projects = projects;
        _selectedProject = projects.isNotEmpty ? projects.first : null;
      });

      // Charger les t√¢ches depuis le service sp√©cialis√©
      final todos = _todoService.todos;
      setState(() {
        _todos = todos;
      });

      // Reprogrammer les notifications pour les t√¢ches avec rappel
      await _rescheduleNotifications();
      
      debugPrint('‚úÖ Donn√©es charg√©es: ${_projects.length} projets, ${_todos.length} t√¢ches');
    } catch (e) {
      debugPrint('‚ùå Erreur lors du chargement des donn√©es: $e');

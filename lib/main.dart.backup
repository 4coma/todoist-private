  void _onTimerTick() {
    if (_timerService.isRunning && _timerService.currentTaskId != -1) {
      setState(() {
        _todos = _todoService.todos; // Recharger les donn√©es pour rafra√Æchir l'affichage
      });
    }
  }

  void _handlePlayPause(TodoItem todo) async {
    if (_timerService.isTaskRunning(todo.id)) {
      final seconds = _timerService.elapsedSeconds;
      
      // Mettre √† jour le temps √©coul√© via le service sp√©cialis√©
      await _todoService.updateElapsedTime(todo.id, todo.elapsedSeconds + seconds);
      
      _timerService.pauseTimer();
      
      // Recharger les donn√©es
      setState(() {
        _todos = _todoService.todos;
      });
    } else {
      final alreadyElapsedSeconds = todo.elapsedSeconds;
      _timerService.startTimer(todo.id, alreadyElapsedSeconds: alreadyElapsedSeconds);
    }
  }

  // Charger les donn√©es sauvegard√©es
  Future<void> _loadData() async {
    try {

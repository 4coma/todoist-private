  // Initialiser le service de notifications
  await NotificationService.initialize();
  
  // V√©rifier l'√©tat des permissions
  await NotificationService.checkPermissions();
  
  // Initialiser le nouveau syst√®me de stockage
  await _initializeStorage();
  
  runApp(const TodoApp());
}

// Initialisation du syst√®me de stockage avec migration
Future<void> _initializeStorage() async {
  try {
    print('üöÄ Initialisation du syst√®me de stockage...');
    
    // Initialiser le LocalStorageService
    await LocalStorageService().initialize();
    
    // V√©rifier si une migration est n√©cessaire
    final migrationService = DataMigrationService();
    if (await migrationService.needsMigration()) {
      print('üîÑ Migration des donn√©es d√©tect√©e...');
      
      // Effectuer la migration
      final result = await migrationService.migrateAllData();
      
      if (result.isSuccessful) {
        print('‚úÖ Migration r√©ussie: $result');
        // Nettoyer les anciennes donn√©es
        await migrationService.cleanupOldData();
      } else {
        print('‚ùå Migration √©chou√©e: $result');
        // Rollback en cas d'erreur
        await migrationService.rollback();
      }
    } else {
      print('‚ÑπÔ∏è Aucune migration n√©cessaire');
    }
    
    print('‚úÖ Syst√®me de stockage initialis√© avec succ√®s');
  } catch (e) {
    print('‚ùå Erreur lors de l\'initialisation du stockage: $e');
  }
}

